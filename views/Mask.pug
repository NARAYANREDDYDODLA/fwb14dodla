extends layout

block content
  h1= title
  p Welcome to the Mask pug
  div(class="container-fluid")
        div(class="row")
            -
                let Mask  = [
                    {
                        "brand": "American Eagle Active Knit Mask",
                        "material": "cotton",
                        "cost": 17
                    },
                    {
                        "brand": "Sanctuary Organic",
                        "material": "natural silk",
                        "cost": 22
                    },
                    {
                        "brand": "Herschel Classic ",
                        "material": "cotton",
                        "cost": 25
                    },                   
                ]
            each v,index in Mask 
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.material}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}

  